<div class="container">
    <%- include ("partials/messages") %>
        <div class="row">
            <% for(let i=0 ; i< products.length;i++) {%>
                <div class="col-md-4 productDiv">
                    <div class="card text-center">
                        <img src="<%= products[i].picture %>" class="my-card-img">
                        <div class="card-boy">
                            <h5 class="card-title">
                                <%= products[i].product_title %> [ <%= parseFloat(products[i].price).toFixed(2) %>$ ]
                            </h5>
                            <form action="/cart/add&<%= products[i]._id %>" method="POST">
                                <div class="form-group">
                                    <input type="number" step=".5" min="0.5" max="50" class="form-control col-md-6 addBt"
                                        id="qty" name="qty" aria-describedby="qty" placeholder="Enter Quantity (KG)" required="" />
                                </div>
                                <button type="submit" class="btn btn-outline-success addBtn" onclick="reloadPage();">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
</div>